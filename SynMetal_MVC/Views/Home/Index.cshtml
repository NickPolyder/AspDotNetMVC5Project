@model SynMetal_MVC.Models.ViewMod.HomeIndexView
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-5">
           
                <div class="text-center">
                    <h2>Latest Product</h2>
                    <p>
                        @Model.lastProduct.Name
                        <br />
                        <small> @Model.lastProduct.Description </small>
                    </p>

                    <p>
                        <a class="btn btn-default"
                           href="@Url.Action("Details", "Products", new { id=Model.lastProduct.id })">Learn more &raquo;</a>
                    </p>
                </div>
           
        </div>
        <div class="col-md-5">
            
                <div class="text-center">
                    <h2>Latest Files</h2>

                    @foreach (var info in Model.LastPdf)
            {
                        <div class="pull-left margin-right">
                            <h4>@info.Category.Name</h4>
                            <p>
                                <a href="@Url.Content(info.FilePath)" target="_blank" class="btn btn-info">@info.FileName</a>
                                <br />
                                <small> @info.Description </small>
                            </p>

                            <p>
                                <a class="btn btn-default"
                                   href="@Url.Action("Details", "PdfFiles", new { id=info.id })">Learn more &raquo;</a>
                            </p>
                        </div>
                    }



                </div>
           
        </div>
    </div>
    </div>

<br/>
<hr />


    <div class="text-center">
        <h2>Getting started</h2>
        <p>
            @ResourceFiles.Resources.Welcome <br />

        </p>
        <p><a class="btn btn-default" href="#">Learn more &raquo;</a></p>
    </div>

