@model IEnumerable<SynMetal_MVC.Models.PdfFile>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
{
<p>
    @Html.ActionLink("Create New", "Create") 
   |
    @Html.ActionLink("Manage PDF Categories","Index","PdfCategories",null,null)
</p>
}
<table class="table">
    <tr>
        <th>
            Download File
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <a class="btn btn-info" target="_blank" href="@Url.Content(item.FilePath)" >Open</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>

        <td>
            @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
            {
            @Html.ActionLink("Edit", "Edit", new { id=item.PdfId }) @:|
             
            @Html.ActionLink("Delete", "Delete", new { id=item.PdfId }) @:|
            }
            @Html.ActionLink("Details", "Details", new { id = item.PdfId })
        </td>
    </tr>
}

</table>
